@model IList<LocationViewModel>
@inject SFA.DAS.EmployerUrlHelper.ILinkGenerator linkGenerator

@{
    var countText = Model.Count > 1 ? "saved locations - view address" : "saved location - view addresses";
    
}

<details class="govuk-details">
    <summary class="govuk-details__summary">
        <span class="govuk-details__summary-text">
            <span class="expand-location-details-header">@Model.Count @countText </span>
        </span>
    </summary>
    <div class="govuk-details__text">
        <table class="govuk-table">
            <thead class="govuk-table__head">
                <tr class="govuk-table__row">
                    <th scope="col" class="govuk-table__header">Name</th>
                    <th scope="col" class="govuk-table__header">Address</th>
                </tr>
            </thead>
            <tbody class="govuk-table__body">

                @foreach (var location in Model)
                {
                    <tr class="govuk-table__row">
                        <td scope="row" class="govuk-table__cell">
                            @if (!String.IsNullOrEmpty(location.Name))
                            {
                                @location.Name
                            }
                        </td>
                        <td scope="row" class="govuk-table__cell">

                            @location.GetCommaDelimitedAddress()

                            @if (!String.IsNullOrEmpty(location.PostCode))
                            {
                                <strong>@location.PostCode </strong>
                            }

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</details>